@model PortfolioMaster.Models.ViewModels.EditPortfolioViewModel

@{
    ViewData["Title"] = "Edit Portfolio";
}

<h1>Edit Portfolio</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    </br>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Edit" class="btn btn-secondary">Cancel</a>
</form>
</br>
<h2>Portfolio's Asset Holdings</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Asset Name</th>
            <th>Transaction Date</th>
            <th>Transaction Type</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assetHolding in Model.AssetHoldings)
        {
            <tr>
                <td>@assetHolding.Asset.Name</td>
                <td>@assetHolding.TransactionDate.ToShortDateString()</td>
                <td>@assetHolding.TransactionType.ToString()</td>
                <td>@assetHolding.Price.ToString("C2")</td>
                <td>
                    <a asp-controller="AssetHolding" asp-action="Edit" asp-route-id="@assetHolding.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-controller="AssetHolding" asp-action="Delete" asp-route-id="@assetHolding.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


