@using PortfolioMaster.Models.ViewModels;
@model AssetHoldingsViewModel

</br>
<table id="assetHoldingsTable" class="table">
    <thead>
        <tr>
            <th>Asset Name</th>
            <th>Portfolio Name</th>
            <th>Quantity (Oz)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GroupedAssetHoldings)
        {
            <tr>
                <td>@item.Asset.Name</td>
                <td>@item.Portfolio.Name</td>
                <td>@item.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

