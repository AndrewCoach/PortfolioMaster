@model AssetHolding

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Asset Holding</h1>

<h3>Are you sure you want to delete this holding?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Asset.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asset.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionType)
        </dd>
    </dl>

    <form asp-controller="AssetHolding" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <!-- Add hidden input fields for returnController and returnAction -->
        <input type="hidden" name="returnController" value="@ViewBag.ReturnController" />
        <input type="hidden" name="returnAction" value="@ViewBag.ReturnAction" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-controller="@ViewBag.ReturnController" asp-action="@ViewBag.ReturnAction" asp-route-id="@Model.PortfolioId" class="btn btn-secondary">Cancel</a>
            <a asp-controller="AssetHolding" asp-action="Index">Back to All Asset Holdings</a>
        </div>
    </form>
</div>






