@model IEnumerable<PortfolioMaster.Models.AssetHolding>

@{
    ViewData["Title"] = "Asset Holdings";
}

<h1>Asset Holdings</h1>

<table id="assetHoldingsTable" class="table">
    <thead>
        <tr>
            <th>Asset Name</th>
            <th>Portfolio Name</th>
            <th>Quantity</th>
            <th>Purchase Date</th>
            <th>Purchase Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Asset.Name</td>
                <td>@item.Portfolio.Name</td>
                <td>@item.Quantity</td>
                <td>@item.PurchaseDate.ToShortDateString()</td>
                <td>@item.PurchasePrice</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#assetHoldingsTable').DataTable({
                "order": [[0, "asc"]],
                "pageLength": 10,
            });
        });
    </script>
}
